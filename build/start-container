#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

service nginx start
service php8.3-fpm start

git config --global --add safe.directory /var/www/html



cd /var/www/html && php artisan down && git pull && composer install --no-dev && npm run build && php artisan migrate --force && chown -R www-data:www-data /var/www/html && php artisan up

if [ $# -gt 0 ]; then
    exec gosu $WWWUSER "$@"
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
