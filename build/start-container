#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

service nginx start
service php8.3-fpm start

git config --global --add safe.directory /var/www/html



php /var/www/html/artisan down
git -C /var/www/html pull
composer --working-dir=/var/www/html install --no-dev
npm ci --prefix /var/www/html
npm run build --prefix /var/www/html
php /var/www/html/artisan migrate --force
chown -R www-data:www-data /var/www/html
php /var/www/html/artisan up

APPKEY=`( source /var/www/html/.env; echo "$APP_KEY" )`
if [ -z $APPKEY ]
then
   php /var/www/html/artisan key:generate --force
fi


if [ $# -gt 0 ]; then
    exec gosu $WWWUSER "$@"
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
